@model KareAjans.BLL.ViewModels.EmployeeVM

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Kare Ajans Çalışan Girişi</title>

    @{
        Layout = null;
    }

    @Styles.Render("~/Content/AdminCss")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    @Scripts.Render("~/Scripts/AdminScript")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row h-75 justify-content-center align-items-center">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-heading">
                            <h3 class="panel-title">Çalışan Giriş Sayfası</h3>
                        </div>
                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">
                                <label>@ViewBag.Error</label>
                            </div>
                        }
                        <div class="panel-body">
                            <form role="form">
                                <fieldset>
                                    <div class="form-group">
                                        <label>Kullanıcı adı</label>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Şifre</label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <input type="submit" name="name" value="Giriş Yap" class="btn btn-lg btn-success btn-block" />

                                </fieldset>
                            </form>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
